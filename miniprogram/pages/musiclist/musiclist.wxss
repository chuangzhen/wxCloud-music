.detailContainer{
  height: 320rpx;
  filter: blur(40rpx);
  opacity: 0.4;
}
.detailMask{
  position: absolute;
  width: 100%;
  height: 320rpx;
  background: #333;
  top: 0;
  left: 0;
  z-index: -1
}
.detailInfo{
  display: flex;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 320rpx;
  padding: 20rpx;
  box-sizing: border-box;
  align-items: center;
}
.detailImg{
width: 280rpx;
height: 280rpx;
margin-right: 24rpx;
border-radius: 6rpx;
}
.detail{
  color: #fff;
  font-size: 24rpx;
}
.detail .detailNm{
  font-size: 36rpx;
  font-weight: 400
}